<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:gravity="fill_vertical"
    android:background="@drawable/regesterbg">

    <TextView
        android:layout_marginTop="96dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Register Now"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textColor="#F8F6F7"
        android:shadowColor="#B93C55"
        android:shadowRadius="50"
        android:shadowDx="2"
        android:shadowDy="2"
        android:layout_marginBottom="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="fill_vertical"
        android:layout_marginLeft="40dp">


        <EditText
            android:id="@+id/edt_txt_user"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:autofillHints="username"
            android:hint="Full Name"
            android:inputType="text"
            android:minHeight="18dp"
            android:textColor="#FFFFFF" />
        <EditText
            android:id="@+id/edt_txt_user_fname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:autofillHints="username"
            android:hint="Fathers Name"
            android:inputType="text"
            android:minHeight="18dp"
            android:textColor="#FFFFFF" />


        <EditText
            android:id="@+id/edt_txt_Email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:autofillHints="emailAddress"
            android:hint="Email"
            android:inputType="textPassword"
            android:minHeight="18dp"
            android:textColor="#FFFFFF"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
            android:id="@+id/edt_txt_user_pass"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:autofillHints="password"
            android:hint="Password"
            android:inputType="textPassword"
            android:minHeight="18dp"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:layout_marginLeft="50dp"
            android:id="@+id/edt_txt_pass_confirm"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:autofillHints="password"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:minHeight="18dp"
            android:textColor="#FFFFFF"
            />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <EditText
            android:id="@+id/txt_user_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="username"
            android:hint="Phone Number"
            android:inputType="number"
            android:minHeight="18dp"
            android:textColor="#FFFFFF" />
        <EditText
            android:layout_marginLeft="30dp"
            android:id="@+id/edt_txt_user_age"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:inputType="number"
            android:minHeight="18dp"
            android:textColor="#FFFFFF"
            />


        <EditText
            android:layout_marginLeft="40dp"
            android:id="@+id/edt_txt_user_Gender"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:minHeight="18dp"
            android:textColor="#FFFFFF"
            />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_txt_user_address"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:inputType="number"
            android:minHeight="18dp"
            android:textColor="#FFFFFF"
            />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="25dp">


        <!--login btn of Register-->

        <Button
            android:layout_marginRight="20dp"
            android:id="@+id/Register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register now"
            tools:ignore="ButtonStyle"
            android:backgroundTint="#BA3C55"

            />
        <TextView
            android:paddingTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have an Acount? Sign In"
            android:textColor="@color/purple_700"/>



    </LinearLayout>



    </LinearLayout>



</LinearLayout>